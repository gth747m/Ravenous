@model IEnumerable<Ravenous.Models.DbModels.Recipe>

@{
    ViewData["Title"] = "Recipes";
}

<h1>Recipes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrepTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CookTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipeType)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderBy(r => r.Name)) {
        <tr class="recipe-row nav-row" data-recipe-id="@item.RecipeId">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrepTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CookTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeType!.Name)
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script src="~/js/recipe/recipe_index.js" asp-append-version="true"></script>
}
